---
const {title,id, imgUrl,shortText} = Astro.props;
---



<div class="col-12 col-md-6 col-lg-4">
  <div class="news_item">
    <a href={`/novosti/${id}`} class="news_item_img">
      <img src={imgUrl} alt="">
    </a>
    <div class="news_item_title">
      <a href={`/novosti/${id}`}>{title}</a>
      <p>{shortText}</p>
    </div>
  </div>
</div>



<style>
  .news_item {
    display: flex;
    flex-direction: column;
    margin-bottom: 25px;
    box-shadow: 0 1px 3px #0000001f, 0 1px 2px #0000003d;
    border-radius: 9px;
    padding: 10px;
  }

  .news_item .news_item_img {
    height: 340px;
    overflow: hidden;
    cursor: pointer;
  }

  .news_item .news_item_img img{
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .news_item .news_item_title {
    padding-top: 20px;
    padding-bottom: 20px;
  }
  .news_item .news_item_title a{
    font-size: 18px;
    text-decoration: none;
    color: #000000;
    transition: all 0.3s;
  }

  .news_item .news_item_title a:hover{
    color: #AE2E42;
  }
  .news_item .news_item_title p{
    font-size: 16px;
    color: #666a6d;
    margin: 0;
  }
</style>